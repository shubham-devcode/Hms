<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="panel stat-card">
            <div>
                <h6 class="text-muted text-uppercase small">Total Students</h6>
                <h2 class="m-0 fw-bold"><%= stats.totalStudents %></h2>
            </div>
            <div class="stat-icon icon-primary"><i class="bi bi-people"></i></div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="panel stat-card">
            <div>
                <h6 class="text-muted text-uppercase small">Present Today</h6>
                <h2 class="m-0 fw-bold"><%= stats.presentStudents %></h2>
            </div>
            <div class="stat-icon icon-success"><i class="bi bi-check-circle"></i></div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="panel stat-card">
            <div>
                <h6 class="text-muted text-uppercase small">On Leave</h6>
                <h2 class="m-0 fw-bold"><%= stats.onHoliday %></h2>
            </div>
            <div class="stat-icon icon-warning"><i class="bi bi-airplane"></i></div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="panel stat-card">
            <div>
                <h6 class="text-muted text-uppercase small">Occupancy</h6>
                <h2 class="m-0 fw-bold"><%= stats.occupancyRate %>%</h2>
            </div>
            <div class="stat-icon icon-danger"><i class="bi bi-building"></i></div>
        </div>
    </div>
</div>

<div class="row g-4">
    
    <div class="col-lg-8">
        <div class="panel h-100">
          
            <div class="d-flex justify-content-between align-items-center mb-3 border-bottom border-secondary pb-2">
    <h5 class="m-0"><i class="bi bi-calendar-check me-2"></i>Attendance & Management</h5>

    <div class="d-flex gap-2">
        <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addStudentModal">
            <i class="bi bi-person-plus"></i> New Student
        </button>

        <input type="text" id="studentSearch" class="form-control bg-dark text-white border-secondary py-1" style="width: 180px; font-size: 0.9rem;" placeholder="Search...">
    </div>
</div>


            <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                <table class="table table-custom mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Room</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="studentTableBody">
                        <% if(students.length > 0) { %>
                            <% students.forEach(student => { %>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <img src="https://ui-avatars.com/api/?name=<%= student.name %>&background=random" class="avatar-sm">
                                            <div>
                                                <div class="fw-bold"><%= student.name %></div>
                                                <div class="small text-muted"><%= student.rollNumber %></div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <% if(student.room) { %>
                                            <span class="badge bg-success"><%= student.room.roomNumber %></span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Unassigned</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if(student.status === 'present') { %>
                                            <span class="text-success small fw-bold"><i class="bi bi-circle-fill" style="font-size: 8px;"></i> Present</span>
                                        <% } else { %>
                                            <span class="text-warning small fw-bold"><i class="bi bi-circle-fill" style="font-size: 8px;"></i> On Holiday</span>
                                        <% } %>
                                    </td>
                                    <td class="text-end">
                                        <form action="/staff/student/<%= student._id %>/status" method="POST" class="d-inline">
                                            <button class="btn btn-sm <%= student.status === 'present' ? 'btn-outline-warning' : 'btn-outline-success' %>" title="Toggle Attendance">
                                                <i class="bi <%= student.status === 'present' ? 'bi-airplane' : 'bi-check-lg' %>"></i>
                                            </button>
                                        </form>

                                        <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#assignModal<%= student._id %>" title="Assign Room">
                                            <i class="bi bi-house-door"></i>
                                        </button>
                                        
                                        <% if(student.room) { %>
                                            <form action="/staff/room/remove" method="POST" class="d-inline" onsubmit="return confirm('Remove student from room?')">
                                                <input type="hidden" name="studentId" value="<%= student._id %>">
                                                <input type="hidden" name="roomId" value="<%= student.room._id %>">
                                                <button class="btn btn-sm btn-outline-danger" title="Vacate Room"><i class="bi bi-box-arrow-right"></i></button>
                                            </form>
                                        <% } %>
                                    </td>
                                </tr>

                                <div class="modal fade" id="assignModal<%= student._id %>" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content bg-dark text-white border-secondary">
                                            <div class="modal-header border-secondary">
                                                <h5 class="modal-title">Assign Room to <%= student.name %></h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <form action="/staff/room/assign" method="POST">
                                                <div class="modal-body">
                                                    <input type="hidden" name="studentId" value="<%= student._id %>">
                                                    <label class="mb-2">Select Available Room:</label>
                                                    <select name="roomId" class="form-select bg-dark text-white border-secondary">
                                                        <% rooms.forEach(r => { %>
                                                            <% const isFull = r.occupants.length >= r.capacity %>
                                                            <option value="<%= r._id %>" <%= isFull ? 'disabled' : '' %>>
                                                                Room <%= r.roomNumber %> (<%= r.occupants.length %>/<%= r.capacity %>) <%= isFull ? '- FULL' : '' %>
                                                            </option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                                <div class="modal-footer border-secondary">
                                                    <button class="btn btn-primary">Assign Room</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="4" class="text-center py-4 text-muted">No students found.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
    <div class="panel h-100">
        <h5 class="mb-3 border-bottom border-secondary pb-2">
            <i class="bi bi-exclamation-circle me-2"></i>Pending Complaints
        </h5>
        
        <% if(complaints.length > 0) { %>
            <div class="d-flex flex-column gap-2">
                <% complaints.forEach(c => { %>
                    
                    <div class="p-3 rounded border border-secondary bg-dark mb-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h6 class="fw-bold m-0 text-white"><%= c.title %></h6>
                            <span class="badge <%= c.priority === 'High' ? 'bg-danger' : 
                                                 c.priority === 'Medium' ? 'bg-warning text-dark' : 'bg-info' %>">
                                <%= c.priority %>
                            </span>
                        </div>
                        
                        <p class="small text-muted mb-1">Category: <b class="text-light"><%= c.category %></b></p>
                        <p class="small text-muted mb-3"><%= c.description %></p>
                        
                        <div class="d-flex gap-2">
                            <form action="/staff/complaint/<%= c._id %>/update" method="POST" class="flex-grow-1">
                                <input type="hidden" name="status" value="in-progress">
                                <button class="btn btn-sm btn-outline-warning w-100">In Progress</button>
                            </form>
                            <form action="/staff/complaint/<%= c._id %>/update" method="POST" class="flex-grow-1">
                                <input type="hidden" name="status" value="resolved">
                                <button class="btn btn-sm btn-success w-100">Resolve</button>
                            </form>
                        </div>
                    </div>
                    <% }) %>
            </div>
        <% } else { %>
            <div class="text-center py-5 text-muted">No pending issues!</div>
        <% } %>
    </div>
</div>

</div>

<script>
    document.getElementById('studentSearch').addEventListener('keyup', function() {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll('#studentTableBody tr');

        rows.forEach(row => {
            let text = row.innerText.toLowerCase();
            row.style.display = text.includes(filter) ? '' : 'none';
        });
    });
</script>
