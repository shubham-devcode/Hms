          <button class="btn btn-primary-glow" data-bs-toggle="modal" data-bs-target="#addStaffModal">
              <i class="bi bi-person-plus-fill me-2"></i> Add New Staff
          </button>
      </div>

      <div class="table-responsive">
          <table class="custom-table">
              <thead>
                  <tr>
                      <th>Name</th>
                      <th>Contact</th>
                      <th>Status</th>
                      <th>Last Update</th>
                      <th class="text-end">Actions</th>
                  </tr>
              </thead>
              <tbody>
                  <% if(staff.length > 0) { %>
                      <% staff.forEach(s => { %>
                          <tr>
                              <td>
                                  <div class="d-flex align-items-center gap-3">
                                      <div class="avatar-circle bg-info text-dark fw-bold">
                                          <%= s.name.charAt(0) %>
                                      </div>
                                      <div class="fw-bold text-white"><%= s.name %></div>
                                  </div>
                              </td>
                              <td class="text-muted"><%= s.phone || s.email %></td>
                              <td>
                                  <% if(s.status === 'present') { %>
                                      <span class="badge bg-success-subtle text-success border border-success">
                                          <i class="bi bi-dot me-1"></i>Active
                                      </span>
                                  <% } else { %>
                                      <span class="badge bg-warning-subtle text-warning border border-warning">
                                          <i class="bi bi-clock-history me-1"></i>On Leave
