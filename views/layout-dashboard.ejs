<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | HMS Portal</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="/css/dashboard.css">

    <style>
        /* Mobile Toggle Button Style */
        .sidebar-toggler {
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            display: none; /* Hidden on Desktop */
            cursor: pointer;
            padding: 0;
        }

        @media (max-width: 991px) {
            .sidebar-toggler { display: block; } /* Show on Mobile */
        }
    </style>
</head>

<body>

    <div class="sidebar-overlay" onclick="toggleSidebar()"></div>

    <aside class="sidebar" id="sidebar">
        <a href="/" class="sidebar-brand">
            <i class="bi bi-buildings-fill text-primary"></i> HMS<span class="text-primary">.</span>
        </a>

        <ul class="nav flex-column flex-grow-1 ps-0">
            
            <% if (typeof user != 'undefined' && user.role === 'admin') { %>
                <div class="sidebar-label">Management</div>
                
                <li class="nav-item">
                    <a href="/admin/dashboard" class="nav-link <%= (typeof section !== 'undefined' && section === 'dashboard') ? 'active' : '' %>">
                        <i class="bi bi-speedometer2"></i> <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/students" class="nav-link <%= (typeof section !== 'undefined' && section === 'students') ? 'active' : '' %>">
                        <i class="bi bi-people"></i> <span>Students</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/rooms" class="nav-link <%= (typeof section !== 'undefined' && section === 'rooms') ? 'active' : '' %>">
                        <i class="bi bi-door-open"></i> <span>Rooms</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a href="/admin/dashboard?section=staff" class="nav-link <%= (typeof section !== 'undefined' && section === 'staff') ? 'active' : '' %>">
                        <i class="bi bi-person-badge"></i> <span>Staff</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="/admin/complaints" class="nav-link <%= (typeof section !== 'undefined' && section === 'complaints') ? 'active' : '' %>">
                        <i class="bi bi-exclamation-circle"></i> <span>Complaints</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/notices" class="nav-link <%= (typeof section !== 'undefined' && section === 'notices') ? 'active' : '' %>">
                        <i class="bi bi-megaphone"></i> <span>Notices</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/gallery" class="nav-link <%= (typeof section !== 'undefined' && section === 'gallery') ? 'active' : '' %>">
                        <i class="bi bi-images"></i> <span>Gallery</span>
                    </a>
                </li>
            <% } %>


            <% if (typeof user != 'undefined' && user.role === 'staff') { %>
                <div class="sidebar-label">Staff Menu</div>
                <li class="nav-item">
                    <a href="/staff/dashboard" class="nav-link active">
                        <i class="bi bi-grid"></i> <span>Dashboard</span>
                    </a>
                </li>
            <% } %>


            <% if (typeof user != 'undefined' && user.role === 'student') { %>
                <div class="sidebar-label">My Hostel</div>
                <li class="nav-item">
                    <a href="/student/dashboard" class="nav-link <%= (typeof section !== 'undefined' && section === 'profile') ? 'active' : '' %>">
                        <i class="bi bi-person-circle"></i> <span>My Profile</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/student/room" class="nav-link <%= (typeof section !== 'undefined' && section === 'room') ? 'active' : '' %>">
                        <i class="bi bi-house-door"></i> <span>My Room</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/student/complaints" class="nav-link <%= (typeof section !== 'undefined' && section === 'complaints') ? 'active' : '' %>">
                        <i class="bi bi-chat-text"></i> <span>Complaints</span>
                    </a>
                </li>
            <% } %>

        </ul>

        <div class="mt-auto pt-4 border-top border-secondary border-opacity-25">
            <a href="/users/logout" class="nav-link text-danger">
                <i class="bi bi-box-arrow-right"></i> <span>Logout</span>
            </a>
        </div>
    </aside>


    <div class="main-content">
        
        <header class="dashboard-header">
            <div class="d-flex align-items-center gap-3">
                <button class="sidebar-toggler" onclick="toggleSidebar()">
                    <i class="bi bi-list"></i>
                </button>
                
                <div>
                    <h4 class="m-0 text-white fw-bold">Welcome, <%= typeof user != 'undefined' ? user.name.split(' ')[0] : 'User' %> ðŸ‘‹</h4>
                    <small class="text-muted text-uppercase" style="font-size: 11px; letter-spacing: 1px;"><%= typeof user != 'undefined' ? user.role : '' %></small>
                </div>
            </div>

            <div class="user-badge">
                <span class="d-none d-md-block text-white me-2 small"><%= typeof user != 'undefined' ? user.name : 'Guest' %></span>
                <% if(typeof user != 'undefined' && user.profilePic) { %>
                    <img src="<%= user.profilePic %>" class="avatar-circle border-0" alt="User">
                <% } else { %>
                    <div class="avatar-circle">
                        <%= typeof user != 'undefined' ? user.name.charAt(0).toUpperCase() : 'U' %>
                    </div>
                <% } %>
            </div>
        </header>

        <% if(success_msg != ''){ %>
            <div class="alert alert-success d-flex align-items-center bg-success bg-opacity-25 border-success text-white mb-4" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> <%= success_msg %>
                <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if(error_msg != ''){ %>
            <div class="alert alert-danger d-flex align-items-center bg-danger bg-opacity-25 border-danger text-white mb-4" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> <%= error_msg %>
                <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if(error != ''){ %>
            <div class="alert alert-danger d-flex align-items-center bg-danger bg-opacity-25 border-danger text-white mb-4" role="alert">
                <i class="bi bi-exclamation-circle-fill me-2"></i> <%= error %>
                <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <%- body %>

        <div class="text-center text-muted mt-5 mb-3 small opacity-50">
            &copy; <%= new Date().getFullYear() %> HMS Portal. All rights reserved.
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle Sidebar Script
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('show');
            document.querySelector('.sidebar-overlay').classList.toggle('show');
        }
    </script>
</body>
</html>
