<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<section id="home" class="hero-section d-flex align-items-center justify-content-center text-center">
    
    <div class="hero-bg">
        <div class="hero-overlay"></div>
        <img src="https://images.unsplash.com/photo-1555854877-bab0e564b8d5?q=80&w=1920" class="hero-media animate-zoom" alt="Hostel Background">
    </div>

    <div class="container hero-content position-relative z-2" data-aos="fade-up" data-aos-duration="1200">
        <div class="d-inline-block mb-4">
            <span class="badge-premium">ðŸš€ Admissions Open 2026</span>
        </div>

        <h1 class="display-1 fw-bolder mb-3 hero-title text-white">
            Next-Gen <span class="text-gradient">Living.</span>
        </h1>
        
        <p class="hero-subtitle mb-5 mx-auto text-white-50">
            Experience world-class facilities, premium security, and a vibrant community designed for scholars.
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a href="/users/login" class="btn btn-primary-glow btn-lg text-decoration-none">
                Student Login <i class="bi bi-arrow-right ms-2"></i>
            </a>
            <a href="/users/register" class="btn btn-outline-glow btn-lg text-decoration-none">
                Join Community
            </a>
        </div>
    </div>

    <div class="scroll-indicator animate-bounce">
        <a href="#about" class="text-white text-decoration-none">
            <i class="bi bi-mouse fs-2"></i>
            <span class="d-block small text-white-50 mt-1" style="font-size: 10px; letter-spacing: 1px;">SCROLL DOWN</span>
        </a>
    </div>

</section>

<section class="stats-section container position-relative z-3">
    <div class="row g-4 justify-content-center">
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
            <div class="glass-card stat-card p-4 d-flex align-items-center justify-content-between">
                <div class="text-start">
                    <h2 class="fw-bold text-white m-0 counter">500+</h2>
                    <small class="text-white-50">Happy Students</small>
                </div>
                <div class="icon-box-glow bg-primary">
                    <i class="bi bi-people-fill fs-3 text-white"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
            <div class="glass-card stat-card p-4 d-flex align-items-center justify-content-between">
                <div class="text-start">
                    <h2 class="fw-bold text-white m-0 counter">150+</h2>
                    <small class="text-white-50">Modern Rooms</small>
                </div>
                <div class="icon-box-glow bg-success">
                    <i class="bi bi-building-fill fs-3 text-white"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
            <div class="glass-card stat-card p-4 d-flex align-items-center justify-content-between">
                <div class="text-start">
                    <h2 class="fw-bold text-white m-0 counter">4.8</h2>
                    <small class="text-white-50">Top Rating</small>
                </div>
                <div class="icon-box-glow bg-warning">
                    <i class="bi bi-star-fill fs-3 text-white"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="about" class="section-padding position-relative overflow-hidden">
    <div class="ambient-glow right"></div>

    <div class="container">
        <div class="row align-items-center mb-5">
            <div class="col-lg-6" data-aos="fade-right">
                <h6 class="text-primary fw-bold text-uppercase ls-2">Why Choose Us</h6>
                <h2 class="display-4 fw-bold text-white">Designed for <br> <span class="text-gradient">Excellence</span></h2>
            </div>
            <div class="col-lg-6 text-white-50" data-aos="fade-left">
                We provide more than just accommodation. We provide an ecosystem where students can thrive, learn, and grow together in a secure environment.
            </div>
        </div>

        <div id="features" class="row g-4">
            <div class="col-md-4" data-aos="zoom-in" data-aos-delay="100">
                <div class="glass-card feature-card p-5 h-100">
                    <div class="feature-icon mb-4 text-primary">
                        <i class="bi bi-wifi fs-1"></i>
                    </div>
                    <h4 class="text-white fw-bold">Ultra-Fast WiFi</h4>
                    <p class="text-white-50">Gigabit speed internet access throughout the campus for uninterrupted studies.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="glass-card feature-card p-5 h-100">
                    <div class="feature-icon mb-4 text-success">
                        <i class="bi bi-shield-check fs-1"></i>
                    </div>
                    <h4 class="text-white fw-bold">24/7 Security</h4>
                    <p class="text-white-50">Biometric entry, CCTV surveillance, and round-the-clock guards for your safety.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="zoom-in" data-aos-delay="300">
                <div class="glass-card feature-card p-5 h-100">
                    <div class="feature-icon mb-4 text-warning">
                        <i class="bi bi-cup-hot fs-1"></i>
                    </div>
                    <h4 class="text-white fw-bold">Healthy Dining</h4>
                    <p class="text-white-50">Nutritious, hygienic, and delicious meals served 4 times a day.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="gallery" class="section-padding bg-darker position-relative">
    <div class="ambient-glow left"></div>
    
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
            <h2 class="display-4 fw-bold text-white">Campus <span class="text-gradient">Life</span></h2>
            <p class="text-white-50">A glimpse into your future home.</p>
        </div>

        <div class="row g-4">
            <% if(typeof galleryImages !== 'undefined' && galleryImages.length > 0) { %>
                <% galleryImages.forEach((img, index) => { %>
                    <div class="col-md-4 col-sm-6" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                        <div class="gallery-card rounded-4 overflow-hidden shadow-lg">
                            <img src="<%= img.imageUrl %>" class="gallery-img">
                            <div class="gallery-overlay">
                                <h5 class="text-white fw-bold m-0"><%= img.title || 'Campus Moment' %></h5>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-md-4" data-aos="fade-up"><div class="gallery-card rounded-4 overflow-hidden"><img src="https://images.unsplash.com/photo-1523050854058-8df90110c9f1?q=80&w=600" class="gallery-img"><div class="gallery-overlay"><h5 class="text-white">Library</h5></div></div></div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="100"><div class="gallery-card rounded-4 overflow-hidden"><img src="https://images.unsplash.com/photo-1596276020587-8044fe049813?q=80&w=600" class="gallery-img"><div class="gallery-overlay"><h5 class="text-white">Sports</h5></div></div></div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="200"><div class="gallery-card rounded-4 overflow-hidden"><img src="https://images.unsplash.com/photo-1555854877-bab0e564b8d5?q=80&w=600" class="gallery-img"><div class="gallery-overlay"><h5 class="text-white">Hostel</h5></div></div></div>
            <% } %>
        </div>
    </div>
</section>

