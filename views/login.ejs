<div class="login-wrapper d-flex align-items-center justify-content-center position-relative overflow-hidden">
  
    <div class="ambient-glow" style="top: -10%; left: -10%; width: 500px; height: 500px;"></div>
    <div class="ambient-glow" style="bottom: -10%; right: -10%; width: 500px; height: 500px; background: #a855f7;"></div>

    <div class="container position-relative z-2">
      <div class="row justify-content-center">
        <div class="col-lg-5 col-md-8">
          
          <div class="glass-card border-0 rounded-5 overflow-hidden position-relative p-4 p-md-5">
              
              <div class="text-center mb-5">
                  <div class="icon-box-glow bg-primary mx-auto mb-3">
                      <i class="bi bi-person-circle fs-2 text-white"></i>
                  </div>
                  <h2 class="fw-bold text-white">Welcome Back</h2>
                  <p class="text-white-50 small">Enter your credentials to access the portal.</p>
              </div>

              <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
                <div class="alert alert-success d-flex align-items-center bg-success bg-opacity-25 border-success text-white" role="alert">
                   <i class="bi bi-check-circle-fill me-2"></i> <%= success_msg %>
                </div>
              <% } %>

              <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                <div class="alert alert-danger d-flex align-items-center bg-danger bg-opacity-25 border-danger text-white" role="alert">
                   <i class="bi bi-exclamation-triangle-fill me-2"></i> <%= error_msg %>
                </div>
              <% } %>

              <% if (typeof error !== 'undefined' && error.length > 0) { %>
                <div class="alert alert-danger d-flex align-items-center bg-danger bg-opacity-25 border-danger text-white" role="alert">
                   <i class="bi bi-exclamation-triangle-fill me-2"></i> <%= error %>
                </div>
              <% } %>

              <form action="/users/login" method="POST">
                  
                  <div class="form-floating custom-floating mb-3">
                      <input type="email" name="email" class="form-control" id="emailInput" placeholder="name@example.com" required>
                      <label for="emailInput"><i class="bi bi-envelope me-2"></i>Email Address</label>
                  </div>

                  <div class="form-floating custom-floating mb-4">
                      <input type="password" name="password" class="form-control" id="passwordInput" placeholder="Password" required>
                      <label for="passwordInput"><i class="bi bi-lock me-2"></i>Password</label>
                  </div>

                  <div class="d-grid mb-4">
                      <button type="submit" class="btn btn-primary-glow btn-lg fs-6">
                          Secure Login <i class="bi bi-box-arrow-in-right ms-2"></i>
                      </button>
                  </div>

                  <div class="text-center">
                      <p class="text-white-50 mb-0">Don't have an account?</p>
                      <a href="/users/register" class="text-primary fw-bold text-decoration-none hover-underline">Create New Account</a>
                  </div>

              </form>

          </div>
        </div>
      </div>
    </div>
</div>

<style>
    /* Wrapper to center content */
    .login-wrapper {
        min-height: 90vh; /* Full screen height minus navbar */
        padding-top: 80px;
    }

    /* Custom Floating Inputs for Dark Theme */
    .custom-floating .form-control {
        background: rgba(15, 23, 42, 0.6) !important;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        border-radius: 12px;
        height: 55px;
    }
    
    .custom-floating .form-control:focus {
        background: rgba(15, 23, 42, 0.9) !important;
        border-color: #3b82f6;
        box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.15);
        color: #fff;
    }

    .custom-floating label {
        color: #94a3b8;
    }
    
    .custom-floating .form-control:focus ~ label,
    .custom-floating .form-control:not(:placeholder-shown) ~ label {
        color: #3b82f6; /* Label color on focus */
        transform: scale(0.85) translateY(-0.7rem) translateX(0.15rem);
    }

    .custom-floating .form-control::placeholder {
        color: transparent; /* Hide default placeholder for floating label effect */
    }

    /* Hover Effects */
    .hover-underline:hover {
        text-decoration: underline !important;
        color: #60a5fa !important;
    }
</style>
